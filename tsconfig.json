{
    "compilerOptions": {
      "target": "es6",  
      "module": "commonjs", 
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "src",  
      "paths": {
        "components/*": ["components/*"],  
        "helpers/*": ["helpers/*"],        
        "assets/*": ["assets/*"]     
      }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  