{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "services/*": ["services/*"],
      "layouts/*": ["layouts/*"],
      "helpers/*": ["helpers/*"],
      "assets/*": ["assets/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
